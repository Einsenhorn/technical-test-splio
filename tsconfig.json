{
    "compilerOptions": {
        "jsx": "react",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["packages"],
    "exclude": ["node_modules"]
  }
